<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp" >

    <ImageView
        android:id="@+id/iv_menu_item"
        android:layout_width="@dimen/main_menu_icon_size"
        android:layout_height="@dimen/main_menu_icon_size"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/main_menu_text_size"
        android:layout_toRightOf="@id/iv_menu_item" />

</RelativeLayout>