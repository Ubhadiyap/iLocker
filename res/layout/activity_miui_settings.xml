<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding" >

    <RelativeLayout
        android:id="@+id/rl_basic_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_enable_system_alert"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_content_padding"
            android:paddingLeft="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding"
            android:paddingTop="@dimen/activity_content_padding"
            android:minHeight="@dimen/setting_item_height" >

            <ImageView
                android:id="@+id/iv_enable_system_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_goto_arrow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_enable_system_alert"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_enable_system_alert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_system_alert"
                    android:textColor="#505050"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_enable_system_alert_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/enable_system_alert_des"
                    android:textColor="#9A9A9A"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/v_devider_service_enable"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_enable_system_alert"
            android:background="@color/background" />

        <RelativeLayout
            android:id="@+id/rl_enable_auto_start"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_devider_service_enable"
            android:minHeight="@dimen/setting_item_height"
            android:paddingBottom="@dimen/activity_content_padding"
            android:paddingLeft="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding"
            android:paddingTop="@dimen/activity_content_padding" >

            <ImageView
                android:id="@+id/iv_enable_auto_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_goto_arrow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_enable_auto_start"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_enable_auto_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_auto_start"
                    android:textColor="#505050"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_enable_auto_start_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/enable_auto_start_des"
                    android:textColor="#9A9A9A"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>